{% extends 'base.html.twig' %}

{% block title %}Edit Developer{% endblock %}

{% block body %}
    <section class="section bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="custom-form p-4 border rounded">
                        <h1 class="text-center">Modifier le profil du Développeur</h1>

                        <!-- Inclure le formulaire de mise à jour -->
                        <div class="mt-4">
                            {{ include('developer/_form.html.twig', {'button_label': 'Update'}) }}
                        </div>

                        <!-- Lien pour revenir à la liste -->
                        <div class="text-center mt-3">
                            <a href="{{ path('app_developer_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        </div>

                        <!-- Inclure le formulaire de suppression -->
                        <div class="text-center mt-3">
                            {{ include('developer/_delete_form.html.twig') }}
