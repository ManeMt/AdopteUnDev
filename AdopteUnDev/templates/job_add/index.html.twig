{% extends 'base.html.twig' %}

{% block title %}JobAdd index{% endblock %}

{% block body %}
    <h1>JobAdd index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PostTitle</th>
                <th>Level</th>
                <th>Salary</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_add in job_adds %}
            <tr>
                <td>{{ job_add.id }}</td>
                <td>{{ job_add.postTitle }}</td>
                <td>{{ job_add.level }}</td>
                <td>{{ job_add.salary }}</td>
                <td>{{ job_add.description }}</td>
                <td>
                    <a href="{{ path('app_job_add_show', {'id': job_add.id}) }}">show</a>
                    <a href="{{ path('app_job_add_edit', {'id': job_add.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_add_new') }}">Create new</a>
{% endblock %}
