{% extends 'base.html.twig' %}

{% block title %}Dashboard - Développeur{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <div class="row">
            <!-- Sidebar Statistiques -->
            <div class="col-lg-3">
                <div class="left-sidebar">
                    <div class="accordion" id="accordionStatistics">
                        <div class="card rounded mt-4">
                            <a data-toggle="collapse" href="#collapseStatistics" class="job-list" aria-expanded="true" aria-controls="collapseStatistics">
                                <div class="card-header" id="headingStatistics">
                                    <h6 class="mb-0 text-dark f-18">Statistiques</h6>
                                </div>
                            </a>
                            <div id="collapseStatistics" class="collapse show" aria-labelledby="headingStatistics">
                                <div class="card-body p-0">
                                    <ul class="list-unstyled">
                                        <li>
                                            <a href="#" class="d-flex justify-content-between align-items-center text-muted">
                                                Vues du profil <span class="badge badge-primary">{{ data.views }}</span>
                                            </a>
                                        </li>
                                       
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contenu principal -->
            <div class="col-lg-9">
                <h4 class="text-dark">Bienvenue, Développeur</h4>
                <p class="text-muted">Voici un résumé de vos statistiques :</p>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5>Vues du profil</h5>
                                <h2>{{ data.views }}</h2>
                            </div>
                        </div>
                    </div>
                   

                <div class="row mt-4">
                    <div class="col-md-12">
                        <h5 class="text-dark">Postes populaires :</h5>
                        <ul class="list-unstyled">
                            {% for job in data.topProfiles %}
                                <li>
                                    <a href="#" class="d-flex justify-content-between align-items-center text-muted">
                                        {{ job.name }} <span class="badge badge-success">{{ job.views }} vues</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
