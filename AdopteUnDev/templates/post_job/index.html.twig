{% extends 'base.html.twig' %}
{% block stylesheets %}
    <!-- FontAwesome CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/fontawesome.css') }}" />
{% endblock %}

{% block body %}
    <!-- Start home -->
    <section class="bg-half page-next-level"> 
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center text-white">
                        <h4 class="text-uppercase title mb-4">Ajouter une offre</h4>
                        <ul class="page-next d-inline-block mb-0">
                            <li><a href="{{ path('home') }}" class="text-uppercase font-weight-bold">Acceuil</a></li>
                            <li>
                                <span class="text-uppercase text-white font-weight-bold">Ajouter une offre</span> 
                            </li> 
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end home -->



<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="rounded shadow bg-white p-4">
                    <div class="custom-form">
                        {{ form_start(form, {'attr': {'id': 'job-add-form', 'class': 'job-form'}}) }}
                        
                        <h4 class="text-dark mb-3">Ajouter une offre:</h4>
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group app-label mt-2">
                                    <label class="text-muted" for="postTitle">Titre du poste</label>
                                    {{ form_widget(form.postTitle, {'attr': {'class': 'form-control resume', 'placeholder': 'Enter job title'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group app-label mt-2">
                                    <label class="text-muted" for="level">Niveau d'expérience requis</label>
                                    {{ form_widget(form.level, {'attr': {'class': 'form-control resume'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group app-label mt-2">
                                    <label class="text-muted" for="salary">Salaire</label>
                                    {{ form_widget(form.salary, {'attr': {'class': 'form-control resume', 'placeholder': '$8000 - $20000'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group app-label mt-2">
                                    <label class="text-muted" for="location">Localisation</label>
                                    {{ form_widget(form.location, {'attr': {'class': 'nice-select rounded'}}) }}
                                </div>
                            </div>
            
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group app-label mt-2">
                                    <label class="text-muted" for="programingLanguages">Technologies recherchées</label>
                                    {{ form_widget(form.programingLanguages, {'attr': {'class': 'nice-select rounded'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group app-label mt-2">
                                    <label class="text-muted" for="description">Description du poste</label>
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control resume', 'rows': 6, 'placeholder': 'Enter job description'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 mt-2">
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            </div>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


    <!-- POST A JOB END -->

    <!-- subscribe start -->
    <section class="section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-5">
                    <div class="float-left position-relative notification-icon mr-2">
                        <i class="mdi mdi-bell-outline text-primary"></i>
                        <span class="badge badge-pill badge-danger">1</span>
                    </div>
                    <h5 class="mt-2 mb-0">Your Job Notification</h5>
                </div>
                <div class="col-lg-8 col-md-7 mt-4 mt-sm-0">
                    <form>
                        <div class="form-group mb-0">
                            <div class="input-group mb-0">
                                <input name="email" id="email" type="email" class="form-control" placeholder="Your email :" required="" aria-describedby="newssubscribebtn">
                                <div class="input-group-append">
                                    <button class="btn btn-primary submitBnt" type="submit" id="newssubscribebtn">Subscribe</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- subscribe end -->

    <!-- Back to top -->
    <a href="#" class="back-to-top rounded text-center" id="back-to-top"> 
        <i class="mdi mdi-chevron-up d-block"> </i> 
    </a>
    {% endblock %}