{% extends 'base.html.twig' %}

{% block title %}Dashboard Développeur{% endblock %}

{% block body %}
<section class="dashboard">
    <div class="dashboard-header">
        <h1>Bienvenue, {{ developer.firstName }} !</h1>
        <p>Voici un aperçu de votre activité :</p>
    </div>

    <div class="stats">
        <div class="stat">
            <h3>3</h3>
            <p>Projets en cours</p>
        </div>
        <div class="stat">
            <h3>15</h3>
            <p>Entreprises intéressées</p>
        </div>
    </div>

    <div class="job-list">
        <h2>Suggestions d'offres</h2>
        <ul>
            {% for job in suggestedJobs %}
                <li>
                    <h3>{{ job.title }}</h3>
                    <p><strong>Salaire proposé :</strong> {{ job.salary }} €</p>
                    <a href="{{ path('job_detail', { id: job.id }) }}" class="btn btn-primary">Postuler</a>
                </li>
            {% else %}
                <p>Aucune offre d'emploi suggérée pour le moment.</p>
            {% endfor %}
        </ul>
    </div>
</section>
{% endblock %}
