{% extends 'base.html.twig' %}

{% block title %}Profil Développeur{% endblock %}

{% block body %}
<section class="profile">
    <div class="profile-header">
        <h1>Profil de {{ developer.firstName }} {{ developer.lastName }}</h1>
        {% if developer.avatar %}
            <img src="{{ asset('uploads/avatars/' ~ developer.avatar) }}" alt="Avatar du développeur">
        {% endif %}
    </div>

    <div class="profile-details">
        <h2>Informations personnelles</h2>
        <p><strong>Salaire minimum :</strong> {{ developer.minSalary }} €</p>
        <p><strong>Niveau :</strong> {{ developer.level }}</p>
        <p><strong>Biographie :</strong> {{ developer.biography }}</p>

        <h2>Compétences</h2>
        <ul>
            {% for skill in developer.programingLanguages %}
                <li>{{ skill.name }}</li>
            {% else %}
                <p>Aucune compétence ajoutée.</p>
            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('developer_dashboard') }}" class="btn btn-primary">Retour au Dashboard</a>
</section>
{% endblock %}
