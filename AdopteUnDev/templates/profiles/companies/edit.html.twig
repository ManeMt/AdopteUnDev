{% extends 'base.html.twig' %}

{% block title %}Profil de l'Entreprise{% endblock %}

{% block body %}
    <section class="company-profile">
        <div class="profile-header">
            {% if company.banner %}
                <div class="banner" style="background-image: url('{{ asset('uploads/banners/' ~ company.banner) }}');">
                </div>
            {% endif %}
            <div class="profile-info">
                <h1>{{ company.name }}</h1>
                {% if company.logo %}
                    <img src="{{ asset('uploads/logos/' ~ company.logo) }}" alt="Logo de l'entreprise">
                {% endif %}
            </div>
        </div>

        <div class="profile-details">
            <h2>Description</h2>
            <p>{{ company.description }}</p>

            <h2>Contact</h2>
            <p>Email : {{ company.contact }}</p>
            <p>Site Web : <a href="{{ company.website }}" target="_blank">{{ company.website }}</a></p>

            <h2>Secteur</h2>
            <p>{{ company.sector.name }}</p>

            <h2>Localisation</h2>
            <p>{{ company.location.name }}</p>
        </div>

        <h2>Offres d'emploi publi√©es</h2>
        <ul class="job-list">
            {% for job in company.jodAdds %}
                <li>
                    <a href="{{ path('job_detail', { id: job.id }) }}">{{ job.title }}</a>
                </li>
            {% else %}
                <p>Aucune offre d'emploi disponible pour le moment.</p>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
