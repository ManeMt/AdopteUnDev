{% extends 'base.html.twig' %}

{% block title %}Add Programming Language{% endblock %}

{% block body %}
    <h1>Add a New Programming Language</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="form-group">
            <label for="entitled">Programming Language Name</label>
            {{ form_widget(form.entitled, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}

    <a href="{{ path('app_developer_index') }}" class="btn btn-secondary">Back to Developer List</a>
{% endblock %}
