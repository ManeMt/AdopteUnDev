<section class="bg-half page-next-level"> 
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center text-white">
                    <h4 class="text-uppercase title mb-4">Create Company Profile</h4>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <form method="post" action="{{ path('app_company-createprofile') }}" enctype="multipart/form-data">
          {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <div class="form-group">
                        <label for="logo">Company Logo</label>
                        <input type="file" id="logo" name="logo" class="form-control-file">
                    </div>
                    <div class="form-group">
                        <label for="name">Company Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter company name" required>
                    </div>
                    <div class="form-group">
                        <label for="industry">Industry</label>
                        <input type="text" id="industry" name="industry" class="form-control" placeholder="Enter industry" required>
                    </div>
                </div>
            </div>

            <!-- Company Details -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="description">About Us</label>
                        <textarea id="description" name="description" class="form-control" rows="5" placeholder="Enter a brief description" required></textarea>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="row">
                <div class="col-lg-12 mt-4">
                    <h4 class="text-dark">Contact Information :</h4>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" id="location" name="location" class="form-control" placeholder="Enter location" required>
                    </div>
                    <div class="form-group">
                        <label for="website">Website</label>
                        <input type="url" id="website" name="website" class="form-control" placeholder="Enter website URL" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" required>
                    </div>
                </div>
            </div>

            <!-- Gallery -->
            <div class="row">
                <div class="col-lg-12 mt-4">
                    <div class="form-group">
                        <label for="images">Gallery Images</label>
                        <input type="file" id="images" name="images[]" class="form-control-file" multiple>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-lg-12 text-center">
                    <button type="submit" class="btn btn-primary">Submit Profile</button>
                </div>
            </div>
        </form>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
